<Window x:Class="KrugovoeShlifovanie.RegisterNewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:KrugovoeShlifovanie"
        mc:Ignorable="d"
        Title="АИС &quot;Расчет режимов резания при круглом шлифовании&quot; - Регистрация пользователя" Height="450" Width="400" WindowStartupLocation="CenterScreen" FontSize="24" MinWidth="400" MinHeight="450">
    <Grid>
        <TextBox x:Name="name" materialDesign:HintAssist.Hint="Имя пользователя/ФИО" HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" BorderBrush="#FF009688" Width="300" FontWeight="Thin"/>
        <PasswordBox materialDesign:HintAssist.Hint="Пароль" x:Name="password" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="300" Height="42" BorderBrush="#FF009688" FontWeight="Thin"/>
        <Button Content="Зарегистрироваться" HorizontalAlignment="Center" Margin="0,0,0,50" VerticalAlignment="Bottom" Width="300" Height="42" FontSize="24" Click="Button_Click" FontWeight="Thin"/>

    </Grid>
</Window>
